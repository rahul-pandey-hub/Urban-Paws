     <script src="https://cdn.tailwindcss.com"></script>
    
    </head>
    
    <body style="background-image: url(../images/b2.jpg);">
      <%- include('header1') %>

      <strong><center><h1>Order-Details</h1></center></strong><br><br>


    <div class="container-fluid">

      <!-- DataTales Example -->
      <div class="card shadow mb-4">
          <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-dark">Report
              </h6>
          </div>
         

              <div class="card-body">

                  <div class="table-responsive">
                    <center><table class="user-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Order-date</th>
      <th>Tracking_no</th>
      <th>Payment_Mode</th>
      <th>Order Payment method</th>
      <th>Price</th>
    </tr>
  </thead>
  
    <% for (const user of users) { %>
      <form action="/update" method="post">
      <tr>
        <td><%= user.orderfname %></td>
        <td><%= user.orderemail %></td>
        <td><%= user.orderphone %></td>
        <td><%= user. orderdate%></td>
        <td id="abc"><%= user.tracking_no %></td>
        <td><%= user.order_payment_method %></td>
        <% if(user.is_cancel_order === 1) { %>
          <td>Cancelled</td>
        <% } else { %>
          <td>
            
            <select name="select" id="select">
              <%if (user.order_status){ %>
                    <option  ><%=user.order_status%></option>
                    <%} else {%>
                    <option class="hidden" value="" selected disabled>Select Status</option>
                    <%}%>
            <option value="Accept">Accept</option>
            <option value="Packed">Packed</option>
            <option value="On The Way">On The Way</option>
            <option value="Delivered">Delivered</option>
          </select><button type="submit" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" style="background-color: blue;">submit</button>
        <input type="hidden" value="<%=user.tracking_no%>" name="tracker" id="">
        </td>
        
        <% } %>
        <td><%= user.total_amount %></td>

        
      </tr>
    </form>
    <% } %>
  
</table></center>

<a href="/order-details.ejs" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                          class="fas fa-download fa-sm text-white-50"></i> Generate Report</a> 
                  </div>
              </div>
          </div>
      </div>

  </div>
    
</body>
</html>