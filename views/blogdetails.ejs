    <strong><center><h1>Users-Details</h1></center></strong><br><br>


    <div class="container-fluid">

      <!-- DataTales Example -->
      <div class="card shadow mb-4">
          <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-dark">Report
              </h6>
          </div>


              <div class="card-body">

                  <div class="table-responsive">
                    <center><table class="user-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Feedback</th>
      
    </tr>
  </thead>
  
    <% for (const user of users) { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.subject %></td>
        <td><%= user.feedback %></td>

        
      </tr>
    <% } %>
  
</table></center>
